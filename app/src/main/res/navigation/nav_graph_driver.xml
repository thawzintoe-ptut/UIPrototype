<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_feed"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.ptut.uiprototype.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@anim/slide_down"
          />
    </fragment>

    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.ptut.uiprototype.EmptyFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_empty"/>


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ptut.uiprototype.SearchResultFragment"
        android:label="fragment_search_result"
        tools:layout="@layout/fragment_search_result"/>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.ptut.uiprototype.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />


</navigation>